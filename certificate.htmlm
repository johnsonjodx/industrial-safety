<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Certificate - Industrial Safety</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 30px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .nav-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            background: white;
            padding: 15px 25px;
            border-radius: 50px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .nav-links {
            display: flex;
            gap: 15px;
        }

        .nav-btn {
            padding: 10px 25px;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-weight: bold;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s;
        }

        .home-btn {
            background: #764ba2;
            color: white;
        }

        .home-btn:hover {
            background: #5a3d7a;
            transform: scale(1.05);
        }

        .certificate-wrapper {
            background: white;
            border-radius: 30px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            margin-bottom: 30px;
        }

        /* Authentic Certificate Styles */
        .certificate {
            background: white;
            padding: 0;
            border-radius: 0;
            max-width: 210mm;
            margin: 0 auto;
            position: relative;
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }

        /* Background Pattern */
        .certificate::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                linear-gradient(rgba(118, 75, 162, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(118, 75, 162, 0.03) 1px, transparent 1px);
            background-size: 50px 50px;
            pointer-events: none;
        }

        /* Decorative Border */
        .certificate-border {
            border: 25px solid gold;
            padding: 40px;
            background: white;
            position: relative;
            box-shadow: inset 0 0 30px rgba(218, 165, 32, 0.2);
        }

        /* Inner Border */
        .certificate-inner-border {
            border: 2px solid #764ba2;
            padding: 30px;
            position: relative;
        }

        /* Corner Decorations */
        .corner-decoration {
            position: absolute;
            width: 60px;
            height: 60px;
            border: 3px solid gold;
        }

        .corner-tl {
            top: 20px;
            left: 20px;
            border-right: none;
            border-bottom: none;
        }

        .corner-tr {
            top: 20px;
            right: 20px;
            border-left: none;
            border-bottom: none;
        }

        .corner-bl {
            bottom: 20px;
            left: 20px;
            border-right: none;
            border-top: none;
        }

        .corner-br {
            bottom: 20px;
            right: 20px;
            border-left: none;
            border-top: none;
        }

        /* Seal/Emblem */
        .certificate-seal {
            position: absolute;
            bottom: 100px;
            right: 80px;
            width: 120px;
            height: 120px;
            background: radial-gradient(circle, gold 30%, #b8860b 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3em;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            border: 3px solid white;
            transform: rotate(-15deg);
            opacity: 0.9;
            z-index: 10;
        }

        /* Gold Ribbon */
        .ribbon {
            position: absolute;
            top: 30px;
            right: -20px;
            width: 150px;
            height: 50px;
            background: linear-gradient(135deg, gold, #b8860b);
            transform: rotate(45deg);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 0.9em;
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
            z-index: 20;
        }

        /* Watermark */
        .watermark {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-30deg);
            font-size: 8em;
            color: rgba(118, 75, 162, 0.05);
            white-space: nowrap;
            font-weight: bold;
            pointer-events: none;
            z-index: 1;
        }

        .certificate-header {
            text-align: center;
            margin-bottom: 30px;
            position: relative;
            z-index: 5;
        }

        .cert-logo {
            font-size: 4.5em;
            color: #764ba2;
            margin-bottom: 10px;
            filter: drop-shadow(2px 4px 6px rgba(0,0,0,0.1));
        }

        .cert-title {
            font-size: 3.2em;
            color: #764ba2;
            font-weight: bold;
            letter-spacing: 3px;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .cert-subtitle {
            font-size: 1.4em;
            color: #666;
            border-top: 3px double gold;
            border-bottom: 3px double gold;
            padding: 10px 40px;
            display: inline-block;
            background: linear-gradient(90deg, transparent, rgba(218, 165, 32, 0.1), transparent);
        }

        .cert-body {
            text-align: center;
            margin: 40px 0;
            position: relative;
            z-index: 5;
        }

        .cert-label {
            font-size: 1.3em;
            color: #666;
            margin-bottom: 15px;
            font-style: italic;
        }

        .cert-name {
            font-size: 3.5em;
            font-weight: bold;
            color: #333;
            margin: 30px 0;
            padding: 25px;
            border-bottom: 3px dashed gold;
            border-top: 3px dashed gold;
            font-family: 'Times New Roman', serif;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.05);
            background: linear-gradient(90deg, transparent, rgba(118, 75, 162, 0.05), transparent);
        }

        .cert-text {
            font-size: 1.3em;
            color: #555;
            line-height: 1.8;
            margin: 30px 0;
        }

        /* Unique Certificate ID */
        .certificate-id {
            font-family: monospace;
            font-size: 0.9em;
            color: #666;
            text-align: center;
            margin: 20px 0;
            padding: 10px;
            background: #f8f9fa;
            border-radius: 5px;
            display: inline-block;
            border: 1px dashed #764ba2;
        }

        .completed-section {
            margin: 40px 0;
            position: relative;
            z-index: 5;
        }

        .completed-section h3 {
            color: #764ba2;
            margin-bottom: 25px;
            font-size: 1.8em;
            text-align: center;
            position: relative;
        }

        .completed-section h3::before,
        .completed-section h3::after {
            content: '‚ú¶';
            color: gold;
            margin: 0 15px;
            font-size: 1.2em;
        }

        .topics-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            max-height: 350px;
            overflow-y: auto;
            padding: 15px;
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            border-radius: 15px;
            border: 1px solid gold;
        }

        .topic-item {
            background: white;
            border-left: 4px solid #764ba2;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
            transition: transform 0.2s;
        }

        .topic-item:hover {
            transform: translateX(5px);
        }

        .topic-item strong {
            color: #764ba2;
            display: block;
            margin-bottom: 5px;
            font-size: 1em;
        }

        .topic-item small {
            color: #666;
            font-size: 0.85em;
        }

        .cert-footer {
            display: flex;
            justify-content: space-between;
            margin-top: 60px;
            padding-top: 30px;
            border-top: 3px double gold;
            position: relative;
            z-index: 5;
        }

        .signature-box {
            text-align: center;
            width: 250px;
        }

        .signature-line {
            width: 100%;
            height: 2px;
            background: #333;
            margin: 10px 0;
        }

        .creative-signature {
            font-family: 'Brush Script MT', 'cursive', 'Lucida Handwriting', 'cursive';
            font-size: 2.5em;
            color: #764ba2;
            margin: 5px 0;
            transform: rotate(-1deg);
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .signature-title {
            color: #666;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .cert-date {
            text-align: center;
            color: #666;
            margin-top: 30px;
            font-size: 1.1em;
            font-style: italic;
        }

        /* Verification Badge */
        .verification-badge {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
            padding: 10px;
            background: #f0f8ff;
            border-radius: 30px;
            font-size: 0.9em;
        }

        .qr-placeholder {
            width: 40px;
            height: 40px;
            background: linear-gradient(45deg, #333 25%, #666 25%, #666 50%, #333 50%, #333 75%, #666 75%);
            background-size: 10px 10px;
            border-radius: 5px;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
            flex-wrap: wrap;
        }

        .action-btn {
            padding: 15px 40px;
            font-size: 1.2em;
            border: none;
            border-radius: 50px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: bold;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .action-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }

        .pdf-btn {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

        .image-btn {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        }

        .no-topics {
            text-align: center;
            padding: 60px;
            background: white;
            border-radius: 20px;
        }

        @media print {
            body {
                background: white;
                padding: 0;
            }
            .nav-bar, .action-buttons, .no-topics .home-btn {
                display: none;
            }
            .certificate-wrapper {
                box-shadow: none;
                padding: 0;
            }
        }

        @media (max-width: 768px) {
            .topics-grid {
                grid-template-columns: 1fr;
            }
            .cert-footer {
                flex-direction: column;
                gap: 30px;
                align-items: center;
            }
            .cert-name {
                font-size: 2.5em;
            }
            .certificate-seal {
                width: 80px;
                height: 80px;
                font-size: 2em;
                bottom: 50px;
                right: 30px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="nav-bar">
            <h2 style="color: #764ba2;">üè≠ Industrial Safety Institute</h2>
            <div class="nav-links">
                <a href="index.html" class="nav-btn home-btn">‚Üê Back to Learning Portal</a>
            </div>
        </div>

        <div id="certificateContainer">
            <!-- Certificate will be loaded here -->
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script>
        // Topics data
        const categories = {
            'Core Safety Units': [
                { num: '01', id: 'core-1', title: 'Introduction to Industrial Safety', category: 'Core Safety Units' },
                { num: '02', id: 'core-2', title: 'Hazard Identification & Risk Assessment', category: 'Core Safety Units' },
                { num: '03', id: 'core-3', title: 'Personal Protective Equipment (PPE)', category: 'Core Safety Units' },
                { num: '04', id: 'core-4', title: 'Emergency Response Procedures', category: 'Core Safety Units' },
                { num: '05', id: 'core-5', title: 'Fire Safety & Prevention', category: 'Core Safety Units' },
                { num: '06', id: 'core-6', title: 'Electrical Safety', category: 'Core Safety Units' },
                { num: '07', id: 'core-7', title: 'Machine Guarding & Equipment Safety', category: 'Core Safety Units' },
                { num: '08', id: 'core-8', title: 'Confined Space Entry', category: 'Core Safety Units' },
                { num: '09', id: 'core-9', title: 'Chemical Handling & Storage', category: 'Core Safety Units' },
                { num: '10', id: 'core-10', title: 'Workplace Ergonomics', category: 'Core Safety Units' }
            ],
            'Case Studies': [
                { num: '11', id: 'case-1', title: 'Industrial Accident Investigation', category: 'Case Studies' },
                { num: '12', id: 'case-2', title: 'Safety Culture Transformation', category: 'Case Studies' },
                { num: '13', id: 'case-3', title: 'Emergency Response Case Study', category: 'Case Studies' },
                { num: '14', id: 'case-4', title: 'Process Safety Management', category: 'Case Studies' },
                { num: '15', id: 'case-5', title: 'Behavioral Safety Program', category: 'Case Studies' }
            ],
            'Specialized Industries': [
                { num: '16', id: 'ccs', title: 'Carbon Capture & Storage Safety', category: 'Specialized Industries' },
                { num: '17', id: 'nuclear', title: 'Nuclear Industry Safety', category: 'Specialized Industries' },
                { num: '18', id: 'refinery', title: 'Petroleum Refinery Safety', category: 'Specialized Industries' },
                { num: '19', id: 'food', title: 'Food Industry Safety', category: 'Specialized Industries' },
                { num: '20', id: 'chemical', title: 'Chemical Manufacturing Safety', category: 'Specialized Industries' },
                { num: '21', id: 'pharma', title: 'Pharmaceutical Safety', category: 'Specialized Industries' }
            ]
        };

        // Generate unique certificate ID
        function generateCertificateId() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let id = '';
            for (let i = 0; i < 4; i++) {
                for (let j = 0; j < 4; j++) {
                    id += chars[Math.floor(Math.random() * chars.length)];
                }
                if (i < 3) id += '-';
            }
            return id;
        }

        // Get completed topics
        function getCompletedTopics() {
            const completed = [];
            
            for (const category in categories) {
                categories[category].forEach(topic => {
                    const saved = localStorage.getItem(`progress_${topic.id}`);
                    if (saved === 'true') {
                        completed.push({
                            ...topic,
                            category: category
                        });
                    }
                });
            }
            
            return completed.sort((a, b) => parseInt(a.num) - parseInt(b.num));
        }

        // Get achievement level
        function getAchievementLevel(completedCount, totalTopics) {
            const percentage = (completedCount / totalTopics) * 100;
            if (percentage === 100) return 'üèÜ DISTINCTION';
            if (percentage >= 75) return 'üåü MERIT';
            if (percentage >= 50) return 'üìö PROFICIENCY';
            return 'üéì ACHIEVEMENT';
        }

        // Render certificate
        function renderCertificate() {
            const completedTopics = getCompletedTopics();
            const container = document.getElementById('certificateContainer');
            const totalTopics = 21;
            const achievementLevel = getAchievementLevel(completedTopics.length, totalTopics);
            const certId = generateCertificateId();
            
            if (completedTopics.length === 0) {
                container.innerHTML = `
                    <div class="no-topics">
                        <h2>üìã No Topics Completed Yet</h2>
                        <p>You haven't completed any topics. Start learning to earn your certificate!</p>
                        <a href="index.html" class="nav-btn home-btn" style="display: inline-block;">‚Üê Back to Learning Portal</a>
                    </div>
                `;
                return;
            }

            // Generate topics HTML
            let topicsHtml = '';
            completedTopics.forEach(topic => {
                topicsHtml += `
                    <div class="topic-item">
                        <strong>${topic.num}. ${topic.title}</strong>
                        <small>${topic.category}</small>
                    </div>
                `;
            });

            const userName = new URLSearchParams(window.location.search).get('name') || 'Your Name';

            const certificateHtml = `
                <div class="certificate-wrapper">
                    <div class="certificate" id="certificate">
                        <!-- Gold Ribbon -->
                        <div class="ribbon">${achievementLevel}</div>
                        
                        <!-- Certificate Seal -->
                        <div class="certificate-seal">
                            ‚ö°
                        </div>
                        
                        <!-- Watermark -->
                        <div class="watermark">INDUSTRIAL SAFETY</div>
                        
                        <div class="certificate-border">
                            <!-- Corner Decorations -->
                            <div class="corner-decoration corner-tl"></div>
                            <div class="corner-decoration corner-tr"></div>
                            <div class="corner-decoration corner-bl"></div>
                            <div class="corner-decoration corner-br"></div>
                            
                            <div class="certificate-inner-border">
                                <div class="certificate-header">
                                    <div class="cert-logo">üè≠</div>
                                    <div class="cert-title">Industrial Safety Institute</div>
                                    <div class="cert-subtitle">Certificate of Completion</div>
                                </div>

                                <div class="cert-body">
                                    <div class="cert-label">This is to certify that</div>
                                    <div class="cert-name" id="certName">${userName}</div>
                                    <div class="cert-text">
                                        has successfully completed the following topics in the<br>
                                        <strong>Industrial Safety Professional Development Program</strong>
                                    </div>

                                    <!-- Certificate ID -->
                                    <div class="certificate-id">
                                        üîê Certificate ID: ISI-${certId}-${new Date().getFullYear()}
                                    </div>

                                    <div class="completed-section">
                                        <h3>Completed Topics (${completedTopics.length}/${totalTopics})</h3>
                                        <div class="topics-grid" id="topicsGrid">
                                            ${topicsHtml}
                                        </div>
                                    </div>

                                    <div class="cert-date" id="certDate">
                                        Issued: ${new Date().toLocaleDateString('en-US', { 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric' 
                                        })}
                                    </div>

                                    <!-- Verification Badge -->
                                    <div class="verification-badge">
                                        <div class="qr-placeholder"></div>
                                        <span>‚úì Verified by Industrial Safety Institute</span>
                                    </div>
                                </div>

                                <div class="cert-footer">
                                    <div class="signature-box">
                                        <div class="signature-line"></div>
                                        <div class="creative-signature">Johnson Ruhiu</div>
                                        <div class="signature-title">Director of Safety</div>
                                    </div>
                                    <div class="signature-box">
                                        <div class="signature-line"></div>
                                        <div style="font-family: 'Brush Script MT', cursive; font-size: 2.2em; color: #666; margin: 5px 0;">Training Team</div>
                                        <div class="signature-title">Training Coordinator</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <button class="action-btn" onclick="editName()">
                            ‚úèÔ∏è Edit Name
                        </button>
                        <button class="action-btn pdf-btn" onclick="exportAsPDF()">
                            üì• Download PDF
                        </button>
                        <button class="action-btn image-btn" onclick="exportAsImage()">
                            üñºÔ∏è Download as Image
                        </button>
                    </div>
                </div>
            `;

            container.innerHTML = certificateHtml;
        }

        // Edit name
        function editName() {
            const currentName = document.getElementById('certName').textContent;
            const newName = prompt('Enter your name for the certificate:', currentName);
            if (newName) {
                document.getElementById('certName').textContent = newName;
            }
        }

        // Export as PDF
        function exportAsPDF() {
            window.print();
        }

        // Export as Image
        function exportAsImage() {
            const certificate = document.getElementById('certificate');
            html2canvas(certificate, {
                scale: 2,
                logging: false,
                allowTaint: false,
                useCORS: true,
                backgroundColor: '#ffffff'
            }).then(canvas => {
                const link = document.createElement('a');
                link.download = 'safety-certificate.png';
                link.href = canvas.toDataURL('image/png');
                link.click();
            });
        }

        // Initialize
        renderCertificate();

        // Listen for storage changes
        window.addEventListener('storage', function(e) {
            if (e.key && e.key.startsWith('progress_')) {
                renderCertificate();
            }
        });
    </script>
</body>
</html>
